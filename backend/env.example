# File Upload Limits
MAX_FILE_SIZE=10485760         # 10MB for regular item photos
MAX_ID_FILE_SIZE=10485760      # 10MB for ID verification documents (ID + selfie)

# Database Configuration
DB_TYPE=sqlite                 # or 'postgresql'
DB_PATH=./database/barangaylink.db # SQLite database path
DATABASE_URL=                  # PostgreSQL connection string

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Admin Registration (set to 'true' temporarily for setup)
ALLOW_ADMIN_SELF_REGISTER=false

# Default Admin User (for automatic seeding)
DEFAULT_ADMIN_USERNAME=Admin
DEFAULT_ADMIN_FULL_NAME=System Administrator
DEFAULT_ADMIN_PASSWORD=Admin8265
DEFAULT_ADMIN_EMAIL=admin@barangaylink.com

